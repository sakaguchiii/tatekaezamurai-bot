{
  "name": "tatekaezamurai-server",
  "version": "1.0.0",
  "description": "清算くん LINEボット サーバー (Raspberry Pi対応)",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "watch": "nodemon --exec ts-node src/index.ts",
    "migrate": "ts-node src/scripts/json-to-sqlite.ts",
    "migrate:dry-run": "ts-node src/scripts/json-to-sqlite.ts --dry-run",
    "verify-migration": "ts-node src/scripts/verify-migration.ts",
    "export-json": "ts-node src/scripts/export-json.ts",
    "export-json:active": "ts-node src/scripts/export-json.ts --active",
    "export-json:stats": "ts-node src/scripts/export-json.ts --stats",
    "test": "jest --verbose",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:performance": "jest --testPathPattern=performance"
  },
  "dependencies": {
    "@line/bot-sdk": "^9.3.0",
    "better-sqlite3": "^12.6.2",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "node-cron": "^4.2.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/node-cron": "^3.0.11",
    "jest": "^29.5.0",
    "nodemon": "^3.0.1",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.0"
  }
}
